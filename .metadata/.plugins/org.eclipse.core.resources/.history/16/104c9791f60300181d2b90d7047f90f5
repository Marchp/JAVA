import java.util.Scanner;

public class Sum {
	public static void main(String []args)
	{
	    Scanner s=new Scanner(System.in);
	    int sum1=0;
	    int sum2=0;
	    System.out.println("Enter n:"); 
	    int n1=s.nextInt();
	    int n2=s.nextInt();
	    
	    for(int j=1;j<=n1;j++)
	    {
	    	sum1=sum1+j;
	    }
	    
	    for(int j=1;j<=n1;j++)
	    {
	    	sum2=sum2+j;
	    }
	    
	    System.out.println("sum="+sum1+"/"+"sum="+sum2);
	}

}
